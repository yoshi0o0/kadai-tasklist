

<% if logged_in? %>

<%= link_to "Log out", logout_path, method: :delete %>

<p>ログイン中:<%= current_user.name %></p>

<h1>タスク一覧</h1>

<ul>
  <% @tasks.each do |tasks| %>
  <li><%= link_to tasks.id, tasks %>:<%= tasks.content %> &gt; <%= tasks.status %></li>
  
  <% end %>
</ul>

<%= link_to "新規タスクの投稿", new_task_path %>

<% else %>

<%= redirect_to login_path %>


<% end %>