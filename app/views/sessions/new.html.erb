<h1>Log in</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>

<%= f.label :email, "Email" %>

<%= f.email_field :email, class: "form-contorl" %>

<%= f.label :password, "Password" %>

<%= f.password_field :password, class: "form-contorl" %>

<%= f.submit "Log in" %>

<%= link_to "Sign up", signup_path %>

<% end %>